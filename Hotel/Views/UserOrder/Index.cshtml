@model IEnumerable<Hotel.Models.ViewModel.OrdersVM>

@{
    ViewBag.Title = "Index";
}




<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoomId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoomId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteOrder", new { id = item.Id })
        </td>
    </tr>
}

</table>
